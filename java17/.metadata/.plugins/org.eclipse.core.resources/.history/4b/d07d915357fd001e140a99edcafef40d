		boolean brandExist=false;
		HashMap<String, List<String>> availMob=new HashMap<String, List<String>>();
		for(HashMap<String, List<String>> map: this.mobiles) {
			if(map.containsKey(brand)){
				brandExist=true;
				break;
			}
		}
		
	if(brandExist) {
		map.get(brand);
	}else {
		
	}
		
		
		return this.mobiles;
	}

	
	

}
